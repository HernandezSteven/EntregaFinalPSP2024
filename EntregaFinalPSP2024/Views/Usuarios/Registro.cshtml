@{
    ViewData["Title"] = "Registro";
}

@* Título y encabezado de la página *@
<div class="text-center mb-4">
    <h2 class="display-4 text-white">Crear Cuenta</h2>
    <p class="lead text-white">Ingresa tus datos para registrarte en nuestra plataforma.</p>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="container d-flex justify-content-center">
    <div class="card shadow-lg p-4 mb-5 bg-white rounded" style="max-width: 400px; width: 100%; position: relative; z-index: 2;">
        <form asp-action="Registro" method="post">
            @* Nombre *@
            <div class="form-group">
                <label for="nombre" class="text-dark">Nombre Completo</label>
                <input type="text" name="nombre" class="form-control" id="nombre" placeholder="Ingrese su nombre completo" required>
            </div>

            @* Correo electrónico *@
            <div class="form-group">
                <label for="email" class="text-dark">Correo Electrónico</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="Ingrese su correo electrónico" required>
            </div>

            @* Contraseña *@
            <div class="form-group">
                <label for="contrasena" class="text-dark">Contraseña</label>
                <input type="password" name="contrasena" class="form-control" id="contrasena" placeholder="Ingrese su contraseña" required>
            </div>

            @* Confirmar Contraseña *@
            <div class="form-group">
                <label for="confirmarContrasena" class="text-dark">Confirmar Contraseña</label>
                <input type="password" name="confirmarContrasena" class="form-control" id="confirmarContrasena" placeholder="Confirme su contraseña" required>
            </div>

            @* Nivel de Usuario (Opcional) *@
            <div class="form-group">
                <label for="nivel" class="text-dark">Nivel</label>
                <select name="nivel" class="form-control" id="nivel">
                    <option value="Básico">Básico</option>
                    <option value="Intermedio">Intermedio</option>
                    <option value="Avanzado">Avanzado</option>
                </select>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-success btn-block btn-lg">
                    <i class="fas fa-user-plus"></i> Registrarse
                </button>
            </div><br>

            <div class="form-group text-center">
                <a href="@Url.Action("Login", "Usuarios")" class="btn btn-link text-primary">
                    <i class="fas fa-sign-in-alt"></i> ¿Ya tienes cuenta? Inicia sesión aquí
                </a>
            </div>
        </form>
    </div>
</div>

@* Estilos adicionales *@
<style>
    body {
        background: linear-gradient(to bottom, #00aaff, #004d99); /* Degradado de azul */
        color: #fff;
        font-family: 'Arial', sans-serif;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.9); /* Fondo semi-transparente */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        font-size: 1.5rem;
        padding: 15px;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .lead {
        font-size: 1.25rem;
    }

    .text-white {
        color: white !important;
    }

    .text-primary {
        color: #007bff !important;
    }

    .btn-link {
        text-decoration: none;
        font-size: 1.1rem;
    }

        .btn-link:hover {
            color: #0056b3;
        }

    .text-dark {
        color: #333 !important; /* Color oscuro para las etiquetas */
    }

</style>

