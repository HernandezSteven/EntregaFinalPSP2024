@model EntregaFinalPSP2024.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-4">
    <h1 class="text-primary">Editar Usuario</h1>
    <h4 class="text-secondary">Modifique la información del usuario</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Campo ID Oculto -->
                <input type="hidden" asp-for="Id" />

                <!-- Campo Nombre -->
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Campo Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Correo Electrónico</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Campo Contraseña -->
                <div class="mb-3">
                    <label asp-for="Contrasena" class="form-label">Contraseña</label>
                    <input asp-for="Contrasena" class="form-control" type="password" />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <!-- Campo Rol -->
                <div class="mb-3">
                    <label asp-for="IdRol" class="form-label">Rol</label>
                    <select asp-for="IdRol" class="form-select" asp-items="ViewBag.IdRol"></select>
                    <span asp-validation-for="IdRol" class="text-danger"></span>
                </div>

                <!-- Campo Nivel -->
                <div class="mb-3">
                    <label asp-for="Nivel" class="form-label">Nivel</label>
                    <input asp-for="Nivel" class="form-control" />
                    <span asp-validation-for="Nivel" class="text-danger"></span>
                </div>

                <!-- Botón Guardar -->
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-check-circle"></i> Guardar Cambios
                    </button>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @* @await Html.RenderPartialAsync("_ValidationScriptsPartial"); *@
}
