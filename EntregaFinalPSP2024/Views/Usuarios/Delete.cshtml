@model EntregaFinalPSP2024.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <h1 class="text-danger">Eliminar Usuario</h1>
    <p class="text-secondary">¿Estás seguro de que deseas eliminar este registro de usuario? Esta acción no se puede deshacer.</p>

    <div class="card mt-3 shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Información del Usuario</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Contrasena)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Contrasena)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Nivel)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nivel)
                </dd>
                <dt class="col-sm-3 fw-bold">
                    Rol
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdRolNavigation.Nombre)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este usuario?');">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-end gap-3">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
        </div>
    </form>
</div>
