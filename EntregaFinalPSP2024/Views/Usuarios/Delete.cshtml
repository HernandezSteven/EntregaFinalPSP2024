@model EntregaFinalPSP2024.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <h1 class="text-danger">Eliminar Usuario</h1>
    <h3>¿Estás seguro de que deseas eliminar este registro?</h3>
    <div class="card mt-3">
        <div class="card-header bg-danger text-white">
            Información del Usuario
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Contrasena)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Contrasena)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Nivel)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nivel)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.IdRolNavigation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdRolNavigation.Id)
                </dd>
            </dl>
        </div>
    </div>
    <form asp-action="Delete" class="mt-3" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este usuario?');">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
        </div>
    </form>
</div>
