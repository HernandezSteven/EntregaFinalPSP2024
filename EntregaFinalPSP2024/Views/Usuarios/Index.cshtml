@model IEnumerable<EntregaFinalPSP2024.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-4">
    <h1 class="text-primary">Usuarios</h1>
    <p class="mt-3">
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Crear Nuevo
        </a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Contrasena)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Nivel)</th>
                    <th>Rol</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Contrasena)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nivel)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdRolNavigation.Nombre)</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i> Detalles
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"
                                   onclick="return confirm('¿Estás seguro de que deseas eliminar este registro?');">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
