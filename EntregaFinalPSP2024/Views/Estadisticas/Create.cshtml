@model EntregaFinalPSP2024.Models.Estadistica

@{
    ViewData["Title"] = "Crear Estadística";
}

<div class="container mt-4">
    <h1 class="text-primary">Nuevo Registro</h1>
    <h4 class="text-secondary">Estadística</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Campo ID -->
                <div class="mb-3">
                    <label asp-for="Id" class="form-label">ID</label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <!-- Campo Usuario -->
                <div class="mb-3">
                    <label asp-for="IdUsuario" class="form-label">Usuario</label>
                    <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>

                <!-- Campo Ejercicio -->
                <div class="mb-3">
                    <label asp-for="IdEjercicio" class="form-label">Ejercicio</label>
                    <select asp-for="IdEjercicio" class="form-control" asp-items="ViewBag.IdEjercicio"></select>
                    <span asp-validation-for="IdEjercicio" class="text-danger"></span>
                </div>

                <!-- Campo Tiempo Empleado -->
                <div class="mb-3">
                    <label asp-for="TiempoEmpleado" class="form-label">Tiempo Empleado (en minutos)</label>
                    <input asp-for="TiempoEmpleado" class="form-control" type="number" />
                    <span asp-validation-for="TiempoEmpleado" class="text-danger"></span>
                </div>

                <!-- Campo Intentos -->
                <div class="mb-3">
                    <label asp-for="Intentos" class="form-label">Intentos</label>
                    <input asp-for="Intentos" class="form-control" type="number" />
                    <span asp-validation-for="Intentos" class="text-danger"></span>
                </div>

                <!-- Campo Resultado -->
                <div class="mb-3">
                    <label asp-for="Resultado" class="form-label">Resultado</label>
                    <input asp-for="Resultado" class="form-control" />
                    <span asp-validation-for="Resultado" class="text-danger"></span>
                </div>

                <!-- Campo Fecha de Realización -->
                <div class="mb-3">
                    <label asp-for="FechaRealizacion" class="form-label">Fecha de Realización</label>
                    <input asp-for="FechaRealizacion" class="form-control" type="date" />
                    <span asp-validation-for="FechaRealizacion" class="text-danger"></span>
                </div>

                <!-- Botón Crear -->
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-check-circle"></i> Crear
                    </button>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
