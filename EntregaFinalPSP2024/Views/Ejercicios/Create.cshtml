@model EntregaFinalPSP2024.Models.Ejercicio

@{
    ViewData["Title"] = "Crear Ejercicio";
}

<div class="container mt-4">
    <h1 class="text-primary">Nuevo Registro</h1>
    <h4 class="text-secondary">Ejercicio</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Campo ID -->
                <div class="mb-3">
                    <label asp-for="Id" class="form-label">ID</label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <!-- Campo Nombre -->
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Campo Descripción -->
                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Campo Dificultad -->
                <div class="mb-3">
                    <label asp-for="Dificultad" class="form-label">Dificultad</label>
                    <input asp-for="Dificultad" class="form-control" />
                    <span asp-validation-for="Dificultad" class="text-danger"></span>
                </div>

                <!-- Campo Categoría -->
                <div class="mb-3">
                    <label asp-for="IdCategoria" class="form-label">Categoría</label>
                    <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.IdCategoria"></select>
                    <span asp-validation-for="IdCategoria" class="text-danger"></span>
                </div>

                <!-- Botón Crear -->
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-check-circle"></i> Crear
                    </button>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
