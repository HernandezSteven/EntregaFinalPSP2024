@model EntregaFinalPSP2024.Models.Meta

@{
    ViewData["Title"] = "Crear Meta";
}

<div class="container mt-4">
    <h1 class="text-primary">Nuevo Registro</h1>
    <h4 class="text-secondary">Meta</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Campo ID -->
                <div class="mb-3">
                    <label asp-for="Id" class="form-label">ID</label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <!-- Campo Usuario -->
                <div class="mb-3">
                    <label asp-for="IdUsuario" class="form-label">Usuario</label>
                    <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>

                <!-- Campo Descripción -->
                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Campo Fecha Limite -->
                <div class="mb-3">
                    <label asp-for="FechaLimite" class="form-label">Fecha Límite</label>
                    <input asp-for="FechaLimite" class="form-control" type="date" />
                    <span asp-validation-for="FechaLimite" class="text-danger"></span>
                </div>

                <!-- Campo Estado -->
                <div class="mb-3">
                    <label asp-for="Estado" class="form-label">Estado</label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <!-- Botón Crear -->
                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-check-circle"></i> Crear
                    </button>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="bi bi-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
