@model EntregaFinalPSP2024.Models.Categoria

@{
    ViewData["Title"] = "Detalles de la Categoría";
}

<div class="container mt-4">
    <h1 class="text-primary">Detalles de la Categoría</h1>
    <h4 class="text-muted">Visualiza la información de la categoría</h4>
    <hr />

    <div>
        <dl class="row">
            <!-- Nombre -->
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <!-- Descripción -->
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
        </dl>
    </div>

    <div class="mt-3">
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">
            <i class="bi bi-pencil"></i> Editar
        </a> |
        <a class="btn btn-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Volver a la Lista
        </a>
    </div>
</div>
