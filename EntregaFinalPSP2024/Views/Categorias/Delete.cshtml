@model EntregaFinalPSP2024.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container mt-4">
    <h1 class="text-danger">Eliminar Categoría</h1>
    <h3 class="text-muted">¿Estás seguro de que deseas eliminar esta categoría?</h3>
    <hr />

    <div>
        <h4 class="text-warning">Detalles de la Categoría</h4>
        <dl class="row">
            <!-- Nombre -->
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <!-- Descripción -->
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-3" onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta categoría?');">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Volver a la Lista
            </a>
        </div>
    </form>
</div>
