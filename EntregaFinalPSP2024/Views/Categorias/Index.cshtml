@model IEnumerable<EntregaFinalPSP2024.Models.Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<div class="container mt-4">
    <h1 class="text-primary">Categorías</h1>
    <p class="text-secondary">Administra las categorías registradas en el sistema</p>
    <hr />

    <p class="mt-3">
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Crear Nuevo
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle mt-3">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No hay categorías registradas.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"
                                       onclick="return confirm('¿Estás seguro de que deseas eliminar este registro?');">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
