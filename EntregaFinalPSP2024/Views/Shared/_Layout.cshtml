<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EntregaFinalPSP2024</title>

    <!-- Estilos de Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Iconos de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .vertical-navbar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #007bff;
            color: white;
            overflow-y: auto;
            transition: transform 0.3s ease-in-out;
            z-index: 1000;
        }

            .vertical-navbar.collapsed {
                transform: translateX(-250px);
            }

            .vertical-navbar a {
                color: white;
                text-decoration: none;
                padding: 0.5rem 1rem;
                display: block;
            }

                .vertical-navbar a:hover {
                    background-color: #0056b3;
                    border-radius: 4px;
                }

        .container-main {
            margin-left: 250px; /* Ajusta al ancho del navbar */
            transition: margin-left 0.3s ease-in-out;
        }

            .container-main.expanded {
                margin-left: 0;
            }

        .toggle-btn {
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 1100;
            background-color: #007bff;
            border: none;
            color: white;
            padding: 0.5rem;
            border-radius: 4px;
            cursor: pointer;
        }

            .toggle-btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body class="bg-light">

    @if (Context.Session.GetString("UsuarioID") != null)
    {
        <!-- Botón para mostrar/ocultar la barra lateral -->
        <button class="toggle-btn" onclick="toggleNavbar()">
            <i class="bi bi-list"></i>
        </button>

        <!-- Barra de navegación vertical -->
        <div id="sidebar" class="vertical-navbar d-flex flex-column">
            <br /><br /><br />
            <a class="navbar-brand text-center mb-4" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-gear"></i> <strong>Entrega PSP 2024</strong>
            </a>
            <nav class="nav flex-column">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Inicio</a>
                <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index"><i class="bi bi-person"></i> Usuarios</a>
                <a class="nav-link" asp-area="" asp-controller="Roles" asp-action="Index"><i class="bi bi-shield-lock"></i> Roles</a>
                <a class="nav-link" asp-area="" asp-controller="Categorias" asp-action="Index"><i class="bi bi-tags"></i> Categorías</a>
                <a class="nav-link" asp-area="" asp-controller="Comentarios" asp-action="Index"><i class="bi bi-chat-left-text"></i> Comentarios</a>
                <a class="nav-link" asp-area="" asp-controller="Ejercicios" asp-action="Index"><i class="bi bi-journal-text"></i> Ejercicios</a>
                <a class="nav-link" asp-area="" asp-controller="Metas" asp-action="Index"><i class="bi bi-bullseye"></i> Metas</a>
                <a class="nav-link" asp-area="" asp-controller="Estadisticas" asp-action="Index"><i class="bi bi-graph-up-arrow"></i> Estadísticas</a>
                <a class="nav-link" asp-area="" asp-controller="Progresoes" asp-action="Index"><i class="bi bi-trophy"></i> Progreso</a>
            </nav>
        </div>
    }

    <!-- Contenido principal -->
    <div id="main-content" class="container container-main mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Pie de página -->
    <footer class="footer mt-auto py-3 bg-dark text-white">
        <div class="container text-center">
            <small>&copy; 2024 Entrega Final Materia PSP | Todos los derechos reservados. Steven Hernandez </small>
        </div>
    </footer>

    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }

        .footer {
            position: relative;
            bottom: 0;
            width: 100%;
        }
    </style>
    <!-- Scripts de JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleNavbar() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('main-content');
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('expanded');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
