@model EntregaFinalPSP2024.Models.Comentario

@{
    ViewData["Title"] = "Eliminar Comentario";
}

<div class="container mt-4">
    <h1 class="text-danger">Eliminar Comentario</h1>

    <h3 class="text-warning">¿Estás seguro de que deseas eliminar este comentario?</h3>

    <div>
        <h4>Comentario</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comentario1)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comentario1)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaComentario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaComentario)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdEjercicioNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdEjercicioNavigation.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdUsuarioNavigation.Id)
            </dd>
        </dl>
    </div>

    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button> |
            <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-left"></i> Volver a la Lista</a>
        </form>
    </div>
</div>
